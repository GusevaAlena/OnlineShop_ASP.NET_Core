@using OnlineShopWebApp.ViewModels
@model RoleViewModel

<div class="row">
    <div class="col-3 my-sm-5">
        @await Html.PartialAsync("SidebarMenu")
    </div>
    <div class="col-sm-9 text-center">
        <h3 class="card-title my-sm-4">Добавление новой роли</h3>
        <form method="post">
            <div class="validation" asp-validation-summary="ModelOnly"></div>
            <input asp-for="Name" type="text" class="form-control" placeholder="Роль" />
            <span class="alert-danger" asp-validation-for="Name"></span><br />      
            <button asp-area="Admin" asp-controller="Role" asp-action="Add" class="btn btn-outline-success my-sm-5" type="submit">Сохранить</button>
        </form>
    </div>
</div>

