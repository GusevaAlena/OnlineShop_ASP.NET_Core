@using OnlineShopWebApp.ViewModels
@model List<RoleViewModel>
<div class="row">
    <div class="col-3 my-sm-5">
        @await Html.PartialAsync("SidebarMenu")
    </div>
    <div class="col-sm-9 text-center">
        <h3 class="card-title">Список ролей</h3>
        @if (Model.Count != 0)
        {
            <table class="table table-info table-bordered table-hover">
                <thead>
                    <tr>
                        <th scope="col">Роль</th>
                        <th scope="col">Описание</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var role in Model)
                    {
                        <tr>
                            <td>@role.Name</td>
                            <td>
                                <div class="btn-group">
                                    <a asp-area="Admin" asp-controller="Role" asp-action="Remove" asp-route-id="@role.Id" class="btn btn-outline-danger"><i class="bi bi-trash3"></i></a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        <a asp-area="Admin" asp-controller="Role" asp-action="Add" class="btn btn-outline-info my-sm-4"><i class="bi bi-plus">Добавить роль</i></a>
    </div>
</div>
