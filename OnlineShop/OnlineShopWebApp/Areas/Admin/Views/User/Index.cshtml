@using OnlineShopWebApp.ViewModels
@model List<UserViewModel>

<div class="row">
    <div class="col-3 my-sm-5">
        @await Html.PartialAsync("SidebarMenu")
    </div>
    <div class="col-sm-9 text-center">
        <h3 class="card-title">Список пользователей</h3>
        @if (Model.Count != 0)
        {
            <table class="table table-info table-bordered table-hover">
                <thead>
                    <tr>
                        <th scope="col">E-mail(логин)</th>
                        <th scope="col">Имя</th>
                        <th scope="col">Фамилия</th>
                        <th scope="col">Телефон</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.Email</td>
                            <td>@user.Name</td>
                            <td>@user.Surname</td>
                            <td>@user.PhoneNumber</td>
                            <td>
                                <a asp-area="Admin" asp-controller="User" asp-action="Details" asp-route-userId="@user.Id">Подробнее</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        <a asp-area="Admin" asp-controller="User" asp-action="Add" class="btn btn-outline-info my-sm-4"><i class="bi bi-plus">Добавить пользователя</i></a>
    </div>
</div>
