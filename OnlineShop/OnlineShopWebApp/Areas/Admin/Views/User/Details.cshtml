@using OnlineShopWebApp.ViewModels
@model UserViewModel

<div class="row">
    <div class="col-3 my-sm-5">
        @await Html.PartialAsync("SidebarMenu")
    </div>
    <div class="col-sm-9 my-sm-5">
        <div class="card">
            <div class="card-header"><h3 class="card-title">Пользователь @Model.Email</h3></div>
            <div class="card-body">
                <table class="table table-borderless">
                    <tbody>
                        <tr>
                            <td>Имя</td>
                            <td>@Model.Name</td>
                        </tr>
                        <tr>
                            <td>Фамилия</td>
                            <td>@Model.Surname</td>
                        </tr>
                        <tr>
                            <td>Email(Логин)</td>
                            <td>@Model.Email</td>
                        </tr>
                        <tr>
                            <td>Телефон</td>
                            <td>@Model.PhoneNumber</td>
                        </tr>
                    </tbody>
                </table>
                <div class="dropdown show">
                    <a class="btn btn-outline-info dropdown-toggle" href="#" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Действие
                    </a>
                    <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                        <a class="dropdown-item" asp-area="Admin" asp-controller="User" asp-action="ChangePassword" asp-route-userId="@Model.Id">Смена пароля</a>
                        <a class="dropdown-item" asp-area="Admin" asp-controller="User" asp-action="Edit" asp-route-userId="@Model.Id">Редактирование данных</a>
                        <a class="dropdown-item" asp-area="Admin" asp-controller="User" asp-action="GiveRole" asp-route-userId="@Model.Id">Права доступа</a>
                        <a class="dropdown-item" asp-area="Admin" asp-controller="User" asp-action="Remove" asp-route-userId="@Model.Id">Удалить пользователя</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
