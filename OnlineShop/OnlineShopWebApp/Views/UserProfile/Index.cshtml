@using OnlineShopWebApp.ViewModels
@model UserProfileViewModel
<div class="card mb-3">
    <div class="row">
        <div class="col-sm-4">
            <img class="card-img-top" src="@Model.ProfileImagePath" />
        </div>
        <div class="col-sm-6">
            <div class="card-body">
                <table class="table table-borderless">
                    <tbody>
                        <tr>
                            <td>Имя</td>
                            <td>@Model.Name</td>
                        </tr>
                        <tr>
                            <td>Фамилия</td>
                            <td>@Model.Surname</td>
                        </tr>
                        <tr>
                            <td>Телефон</td>
                            <td>@Model.PhoneNumber</td>
                        </tr>
                    </tbody>
                </table>
                <div class="d-flex justify-content-sm-start my-sm-5">
                    <a asp-area="" asp-controller="UserProfile" asp-action="Edit" class="btn btn-outline-info" type="button">Редактировать профиль</a>
                    <a asp-area="" asp-controller="UserProfile" asp-action="Orders" class="btn btn-outline-info mx-sm-4" type="button">Мои заказы</a>
                    <a asp-area="" asp-controller="Home" class="btn btn-outline-info" type="button">Вернуться на главную</a>
                </div>   
            </div>
        </div>
    </div>
</div>
