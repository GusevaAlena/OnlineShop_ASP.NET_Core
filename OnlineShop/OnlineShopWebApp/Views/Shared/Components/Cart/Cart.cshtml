@model int
@if (Model == 0)
{
    <a class="nav-link text-info" asp-area="" asp-controller="Cart" asp-action="Index">
        <i class="bi bi-cart"></i>
    </a>
}
else
{
    <a class="nav-link text-danger" asp-area="" asp-controller="Cart" asp-action="Index">
        <i class="bi bi-cart"></i>
        <span style="color:aliceblue" class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">@Model</span>
    </a>
}