<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <a class="navbar-brand text-info shop-title" asp-area="" asp-controller="Home" asp-action="Index">
                <img src="~/images/logo.jpg" alt="" height="100px" class="d-inline-block align-text-center" />
                Музыкальный мир
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-sm-end">
                <ul class="navbar-nav justify-content-end">
                    @if (User.Identity.IsAuthenticated)
                    {

                        <li class="nav-item mx-sm-1">
                            <a class="nav-link text-info" asp-area="" asp-controller="Product" asp-action="Favorites"><i class="bi bi-heart"></i></a>
                        </li>
                        <li class="nav-item mx-sm-1">
                            <a class="nav-link text-info" asp-area="" asp-controller="Product" asp-action="Compare"><i class="bi bi-arrow-left-right"></i></a>
                        </li>
                    }
                    <li class="nav-item mx-sm-1">
                        @await Component.InvokeAsync("Cart")
                    </li>
                    <li class="nav-item mx-sm-1">
                        <div class="dropdown show text-info">
                            @if (User.Identity.IsAuthenticated)
                            {
                                <a class="nav-link text-info dropdown-toggle" href="#" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    @await Component.InvokeAsync("UserProfile")
                                </a>
                            }
                            else
                            {
                                <a class="nav-link text-info dropdown-toggle" href="#" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <i class="bi bi-person"></i>
                                </a>
                            }
                            <div class="dropdown-menu dropdown-menu-sm-right" aria-labelledby="dropdownMenuLink">
                                @if (User.Identity.IsAuthenticated)
                                {
                                    @if (User.IsInRole("Администратор"))
                                    {
                                        <a class="dropdown-item text-info" asp-area="Admin" asp-controller="Order" asp-action="Index">Панель администратора</a>
                                    }
                                    <a class="dropdown-item text-info" asp-area="" asp-controller="UserProfile" asp-action="Index">Личный кабинет</a>
                                    <a class="dropdown-item text-info" asp-area="" asp-controller="Account" asp-action="Logout">Выход</a>
                                }
                                else
                                {
                                    <a class="dropdown-item text-info" asp-area="" asp-controller="Account" asp-action="Login">Вход</a>
                                    <a class="dropdown-item text-info" asp-area="" asp-controller="Account" asp-action="Registration">Регистрация</a>
                                }
                            </div>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>
