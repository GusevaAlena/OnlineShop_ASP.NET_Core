@using OnlineShopWebApp.ViewModels
@model LoginViewModel

<div class="row justify-content-center">
    <div class="col-sm-6">
        <h3 class="page-title my-sm-4 text-center">Вход</h3>      
        <form method="post">
            <input type="hidden" asp-for="ReturnUrl" value="@Model.ReturnUrl" />
            <div class="validation my-sm-4" asp-validation-summary="ModelOnly"></div>
            <div>
                <input asp-for="UserName" class="form-control my-sm-4" type="email" placeholder="E-mail" />
                <span class="alert-danger" asp-validation-for="UserName"></span>
            </div>
            <div>
                <input asp-for="Password" class="form-control" type="password" placeholder="Пароль" />
                <span class="alert-danger" asp-validation-for="Password"></span>
            </div>
            <div class="row">
                <div class="col text-left mx-sm-4 my-sm-4">
                    <input asp-for="RememberMe" class="form-check-input" type="checkbox" value="true"/><label>Запомнить меня?</label>
                </div>
                <div class="col text-right my-sm-4">
                    <a href="#">Забыли пароль?</a>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <button asp-controller="Account" asp-action="Login" type="submit" class="btn btn-outline-info">Войти</button>
                </div>
                <div class="col text-right">
                    <a asp-controller="Account" asp-action="Registration" asp-route-returnUrl="@Model.ReturnUrl" class="btn btn-outline-info">Зарегистрироваться</a>
                </div>
            </div>
        </form>
    </div>
</div>

